@model ActorViewModel

@{
    ViewBag.Title = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilPicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Actor.ProfilePictureUrl" class="control-label"></label>
                        <input asp-for="Actor.ProfilePictureUrl" class="form-control" />
                        <span asp-validation-for="Actor.ProfilePictureUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Actor.FullName" class="control-label"></label>
                        <input asp-for="Actor.FullName" class="form-control" />
                        <span asp-validation-for="Actor.FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Actor.Bio" class="control-label"></label>
                        <input asp-for="Actor.Bio" class="form-control" />
                        <span asp-validation-for="Actor.Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>

            </div>
        </div>

    </div>

</div>

@section Scripts{
    <script>
       $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
           output.src = $("#Model.Actor.ProfilePictureUrl").val();
        })
        $("#Model.Actor.ProfilePictureUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}